[init]
defaultBranch = main

[user]
useConfigOnly = true

[core]
autocrlf = input

[push]
autoSetupRemote = true

[pull]
rebase = true

[rebase]
autoStash = true

[fetch]
prune = true
pruneTags = true

[diff]
colorMoved = zebra

[include]
path = ~/.gitconfig-local

# git is picky about the path normalization, so include all the
# possibilities on my different systems

[includeIf "gitdir:/home/zach/workspace/zoetis/"]
path = ~/workspace/zoetis/.gitconfig

[includeIf "gitdir:/home/shared/workspace/zoetis/"]
path = ~/workspace/zoetis/.gitconfig

[includeIf "gitdir:/shared/workspace/zoetis/"]
path = ~/workspace/zoetis/.gitconfig
